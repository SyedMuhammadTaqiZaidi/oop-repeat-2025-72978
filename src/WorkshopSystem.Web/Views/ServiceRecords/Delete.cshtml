@model WorkshopSystem.Core.Application.DTOs.ServiceRecordDto
@{
    ViewData["Title"] = "Delete Service Record";
}

<h1>Delete Service Record</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this service record?</h4>
</div>

<div class="card">
    <div class="card-header">
        <h5>Service Record Details</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Service Date</dt>
            <dd class="col-sm-9">@Model.ServiceDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Customer</dt>
            <dd class="col-sm-9">@Model.CustomerName</dd>

            <dt class="col-sm-3">Car</dt>
            <dd class="col-sm-9">@Model.CarRegistrationNumber</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Hours Worked</dt>
            <dd class="col-sm-9">@Model.HoursWorked hours</dd>

            <dt class="col-sm-3">Cost</dt>
            <dd class="col-sm-9">â‚¬@Model.ServiceCost.ToString("F2")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Assigned Mechanic</dt>
            <dd class="col-sm-9">@Model.MechanicName</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form> 