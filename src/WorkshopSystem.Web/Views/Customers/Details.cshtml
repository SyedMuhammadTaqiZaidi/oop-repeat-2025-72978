@model WorkshopSystem.Core.Application.DTOs.UserDto

@{
    ViewData["Title"] = "Customer Details";
}

<h1>Customer Details</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-user"></i> Customer Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">First Name</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>
                            
                            <dt class="col-sm-4">Last Name</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>
                            
                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Phone Number</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                            
                            <dt class="col-sm-4">Email Confirmed</dt>
                            <dd class="col-sm-8">
                                @if (Model.EmailConfirmed)
                                {
                                    <span class="badge bg-success">Confirmed</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                            </dd>
                            
                            <dt class="col-sm-4">User ID</dt>
                            <dd class="col-sm-8"><small class="text-muted">@Model.Id</small></dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-cogs"></i> Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit Customer
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete Customer
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 