@model IEnumerable<WorkshopSystem.Core.Application.DTOs.UserDto>

@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <p class="text-muted">Manage all registered customers in the system.</p>
    </div>

</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</strong>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                <td>
                                    @if (item.EmailConfirmed)
                                    {
                                        <span class="badge bg-success">Confirmed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="mt-3">
        <small class="text-muted">
            <i class="fas fa-info-circle"></i> 
            Showing @Model.Count() customer(s) from database
        </small>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-users fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No Customers Found</h4>
            <p class="text-muted">There are no customers registered in the system yet.</p>

        </div>
    </div>
}

@section Styles {
    <style>
        .table th, .table td {
            vertical-align: middle;
        }
        .btn-sm {
            margin: 2px;
        }
    </style>
} 